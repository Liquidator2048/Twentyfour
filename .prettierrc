{
  "semi": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": [
        "**/*.css",
        "**/*.scss",
        "**/*.html",
        "**/*.vue"
      ],
      "options": {
        "singleQuote": false
      }
    }
  ],
  "trailingComma": "all",
  "printWidth": 80,
  "endOfLine": "auto",
  "tabWidth": 4
}
